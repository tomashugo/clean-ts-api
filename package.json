    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^20.4.9",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.11.1",
    "eslint-config-standard-with-typescript": "^38.0.0",
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^8.0.3",
